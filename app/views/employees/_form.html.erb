<%= form_with model: employee, local: true do |f| %>

<div class="form_box">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="form_box">
  <%= f.label :worker_number %>
  <%= f.text_field :worker_number %>
</div>

<div class="form_box">
  <%= f.label :job_title %>
  <%= f.text_field :job_title %>
</div>

<div class="form_box">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div class="form_box">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div>

  <%= f.label :admin %>
  <%= f.check_box :admin %>

  <%= f.submit %>

<% end %>