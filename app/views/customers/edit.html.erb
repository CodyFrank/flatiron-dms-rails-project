<%= form_with model: @customer, local: true do |f| %>

<div class="form_box">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="form_box">
  <%= f.label :phone_number %>
  <%= f.number_field :phone_number %>
</div>

<div class="form_box">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

  <%= f.submit %>

<% end %>

<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |m| %>
    <div class="errors">
      <p><%= m %></p>
    </div>
  <% end %>
<% end %>